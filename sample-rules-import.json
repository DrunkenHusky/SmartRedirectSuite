{
  "rules": [
    {
      "id": "rule-001",
      "mode": "PARTIAL",
      "matcher": "/old-news/",
      "targetPath": "/aktuelles/",
      "infoText": "Nachrichten wurden in den neuen Bereich 'Aktuelles' verschoben."
    },
    {
      "id": "rule-002",
      "mode": "COMPLETE",
      "matcher": "/legacy-dashboard",
      "targetUrl": "https://neuedomain.com/dashboard",
      "infoText": "Das neue Dashboard bietet erweiterte Funktionen und ein verbessertes Design."
    },
    {
      "mode": "PARTIAL",
      "matcher": "/old-products/",
      "targetPath": "/produkte/",
      "infoText": "Produktkatalog wurde überarbeitet und ist jetzt unter /produkte/ verfügbar."
    },
    {
      "mode": "PARTIAL",
      "matcher": "/downloads/",
      "targetPath": "/ressourcen/downloads/"
    },
    {
      "id": "rule-005",
      "mode": "PARTIAL",
      "matcher": "/support/",
      "targetPath": "/hilfe/",
      "infoText": "Support-Bereich wurde umbenannt und erweitert."
    }
  ]
}
